    <style>
        *, *::before, *::after {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        .navbar{
            position: fixed;
            width: 100%;
            top: 0px;
        }

        body {
            font-family: 'Anton', sans-serif;
            background-color: #eee;
            color: #333;
            min-height: 100vh;
            display: -webkit-box;
            display: flex;
            -webkit-box-pack: center;
                    justify-content: center;
            align-content: center;
            -webkit-box-align: center;
                    align-items: center;
            flex-wrap: wrap;
        }

        main{
            min-height: 90vh;
        }

        .container {
            position: relative;
            width: 100em;
            height: 200px;
            border-radius: 4px;
            display: -webkit-box;
            display: flex;
            -webkit-box-pack: center;
                    justify-content: center;
            -webkit-box-align: center;
                    align-items: center;
            margin: 5em;
            -webkit-perspective: 1000px;
                    perspective: 1000px;
        }

        .square {
            width: 65em;
            height: 10em;
            -webkit-transform: rotateX(30deg);
                    transform: rotateX(30deg);
            position: absolute;
            cursor: -webkit-grab; 
            cursor: grab;
        }
        .box {
            width: 65em;
            height: 10em;
            -webkit-transform: rotateX(30deg);
                    transform: rotateX(30deg);
            position: absolute;
            cursor: -webkit-grab; 
            cursor: grab;
        }
        

        #A0 {
            z-index: 1;
            background-color: darkseagreen;         
            position: absolute;
            bottom: 0px;
            transform: rotateX(30deg) translateY(0px) translateZ(0px);
            -webkit-transform: rotateX(30deg) translateY(0px) translateZ(0px);
        }

        .box1{
            background-color: steelblue;         
            position: absolute;
            bottom: 0px;
            transform: rotateX(30deg) translateY(0px) translateZ(-200px);
            -webkit-transform: rotateX(30deg) translateY(0px) translateZ(-200px);
        }

        .box2{
            background-color: salmon;         
            position: absolute;
            bottom: 0px;
            transform: rotateX(30deg) translateY(0px) translateZ(-400px);
            -webkit-transform: rotateX(30deg) translateY(0px) translateZ(-400px);
        }

        .box3{
            background-color: thistle;         
            position: absolute;
            bottom: 0px;
            transform: rotateX(30deg) translateY(0px) translateZ(-600px);
            -webkit-transform: rotateX(30deg) translateY(0px) translateZ(-600px);
        }

        #ts-preserve:checked ~ .container {
        -webkit-transform-style: preserve-3d;
                transform-style: preserve-3d;
        }

        #ts-preserve:checked ~ .options > label.preserve {
            background-color: greenyellow;
        }

        .table{
            width: 100%;
            display: flex;
            position: absolute;
            bottom: 0px;
            margin: 5px;
            left: -5px;
        }

        .displayblock{
            margin: 5px;
            width: 20%;
        }

        header{
            width: 100%;
        }

        .hold{
            border: 20px solid blue;
        }

        .hide{
            display: none;
        }
    </style>
</head>
